#include <LiquidCrystal.h>

LiquidCrystal lcd(7,6,5,4,3,2);
void setup() {
  lcd.begin(16,2);
  lcd.clear();

}

void loop() {
  lcd.setCursor(3,0);
  pcd.print(".SKORS.");
  lcd.setCursor(4,1);
  pcd.print("TENIS")
  delay(3000);

  for(int pos=0;pos<3;pos++){
    lcd.scrollDisplayLeft();
    deley(100);
  }

  for(int pos=0;pos<6;pos++){
    lcd.scrollDisplayRigt();
    deley(100);
  }

  for(int pos=0;pos<6;pos++){
    lcd.scrollDisplayLeft();
    deley(100);
  }
deley(1000)
lcd.noDisplay();
deley(500)
lcd.Display();
deley(500)
lcd.Display();
deley(500)
lcd.Display();
deley(500)
lcd.Display();
deley(500)
lcd.Display();
deley(500)

}






